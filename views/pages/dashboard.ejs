<div class="dashboard-container">
  <h1>Your Travel Dashboard</h1>

  <div class="stats-grid">
    <div class="stat-card created">
      <h2>Trips Created</h2>
      <p><%= createdTrips.length %></p>
    </div>
    <div class="stat-card joined">
      <h2>Trips Joined</h2>
      <p><%= joinedTrips.length %></p>
    </div>
  </div>

  <section class="trips-section">
    <h2>All Your Trips</h2>
    <div class="trips-grid">
      <% createdTrips.forEach((trip) => { %>
        <div class="trip-card created-trip">
          <h3><%= trip.to %></h3>
          <p><strong>From:</strong> <%= trip.from %> to <%= trip.to %></p>
          <p><strong>Status:</strong> Created by you</p>
          <p><strong>Participants:</strong> <%= trip.participantCount %> out of <%= trip.travelersNeeded %></p>
        </div>
      <% }) %>

      <% joinedTrips.forEach((trip) => { %>
        <div class="trip-card joined-trip">
          <h3><%= trip.to %></h3>
          <p><strong>From:</strong> <%= trip.from %> to <%= trip.to %></p>
          <p><strong>Status:</strong> Participating</p>
          <p><strong>Participants:</strong> <%= trip.participantCount %> out of <%= trip.travelersNeeded %></p>
        </div>
      <% }) %>
    </div>
  </section>
</div>
